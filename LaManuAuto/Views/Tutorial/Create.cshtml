@model LaManuAuto.Models.Tutorial

@{
    ViewData["Title"] = "Create";
}

<h1 class="border-bottom border-primary pb-2 mb-4">Add tutorial</h1>

<div class="row">
    <div  class="mb-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset class="mb-3">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoUrl" class="control-label"></label>
                    <input asp-for="VideoUrl" class="form-control" />
                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset class="mb-3">
                <legend>Tags</legend>
                @foreach (var tag in ViewBag.Tags)
                {
                    <div class="form-check">
                        <input id="Tag_@tag.Id" class="form-check-input" name="Tag_@tag.Id" type="checkbox" value="@tag.Id" />
                        <label for="Tag_@tag.Id" class="form-check-label">@tag.Fullname</label>
                    </div>
                }
            </fieldset>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

