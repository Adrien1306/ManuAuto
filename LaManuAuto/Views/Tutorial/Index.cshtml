@model IEnumerable<LaManuAuto.Models.Tutorial>

@{
    ViewData["Title"] = "Index";
}

<h1 class="border-bottom border-primary pb-2 mb-4">Gestion des tutoriels</h1>

@if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
{
<div class="mb-4">
    <a class="text-decoration-none btn btn-primary" asp-action="Create">
        <img src="/images/svg/plus-circle.svg" alt="" />
        Ajouter
    </a>
</div>
}

<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>
                Titre
            </th>
            <th>
                Description
            </th>
            <th>
                Url de la vidéo
            </th>
            <th>
                Publié le 
            </th>
            <th>
                Modifié le
            </th>
            <th>
                Actions
            </th>
            <th>Consulté</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationDate)
            </td>
            <td>
                @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
            <td>
                @if (@item.Viewed)
                {
                    <img src="/images/svg/check-lg.svg" alt="" />
                }
                else
                {
                    <span></span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
