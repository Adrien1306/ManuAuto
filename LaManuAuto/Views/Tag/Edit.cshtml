@model LaManuAuto.Models.Tag

@{
    ViewData["Title"] = "Edit";
}

<h1 class="border-bottom border-primary pb-2 mb-4">Modification de la catégorie</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Shortname" class="control-label"></label>
                <input asp-for="Shortname" class="form-control" />
                <span asp-validation-for="Shortname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

