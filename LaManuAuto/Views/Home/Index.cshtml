@model IEnumerable<LaManuAuto.Models.Tutorial>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Bienvenue sur la MANU-AUTO</h1>
</div>

<div class="row row-cols-1 row-cols-xl-3 g-5">
    @foreach (var item in Model)
    {
        <div class="col">
            <a class="text-decoration-none" asp-controller="Tutorial" asp-action="Details" asp-route-id="@item.Id">
                <div class="card mb-3">
                    <div class="card-header fs-5 fw-light bg-primary text-white">@item.Title</div>
                    <div class="card-body bg-primary text-black bg-opacity-25">
                        <p class="card-text text-truncate">@item.Description</p>
                        <div class="text-center">
                            <iframe class="text-center" src="@item.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>