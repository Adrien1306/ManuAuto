
@{
    ViewData["Title"] = "Manager Page";
}
<div>
    <h1 class="display-4 text-center">Manager Page</h1>
    @if (@Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Normalized name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var role in Model)
                {
                    <tr>
                        <th scope="row">@role.Id</th>
                        <td>@role.Name</td>
                        <td>@role.NormalizedName</td>
                        <td>
                            <a asp-action="Profile" asp-route-id="@role.Id">Profile</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p>There's no registered role !</p>
    }
</div>